FROM ubuntu



RUN apt update && apt install -yq --no-install-recommends \
     nano \
     git curl  wget \
     iputils-ping net-tools \ 
     sudo \
     openssh-server

# copiar los script's del entrypoint
RUN mkdir -p /root/admin/base
WORKDIR /root/admin/base

COPY ./dockerfiles/base/admin .
RUN chmod +x ./start.sh

# Copiar clave SSH p√∫blica
COPY ./common/id_ed25519.pub /tmp/authorized_key.pub

ENTRYPOINT [ "./start.sh" ]